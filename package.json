    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma": "prisma",
    "aurora": "aurora"
  },
  "_moduleAliases": {
    "@src": "src",
    "@modules": "src/modules",
    "@content-type": "src/content-type"
